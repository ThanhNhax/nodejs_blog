<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
        <div class='col-sm-6 col-lg-4'>
            <div class='card'>
                <img class='card-img-top' src={{this.image}} alt={{this.name}} />
                <div class='card-body'>

                    <h4 class='card-title'>{{this.name}}</h4>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='/courses/{{this.slug}}' class='btn btn-primary'>Mua khóa học</a>

                </div>
            </div>
        </div>
        {{else}}
        <h1 class="text-center">Chưa có khóa học nào</h1>
        {{/each}}
    </div>
</div>