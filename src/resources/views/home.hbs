<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-4'><div class='card'>
                    <img
                        class='card-img-top'
                        src={{this.image}}
                        alt={{this.name}}
                    />
                    <div class='card-body'>
                        <h4 class='card-title'>{{this.name}}</h4>
                        <p class='card-text'>{{this.discription}}</p>
                    </div>

                    <button class='btn btn-danger'>Mua khóa học</button>
                </div>
            </div>
        {{/each}}
    </div>
</div>